@model DDVTracker.Models.Fish

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FishId" />
            <div class="form-group">
                <label asp-for="GameVersionId" class="control-label"></label>
                <select asp-for="GameVersionId" class="form-control" asp-items="ViewBag.GameVersionId"></select>
                <span asp-validation-for="GameVersionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishName" class="control-label"></label>
                <input asp-for="FishName" class="form-control" />
                <span asp-validation-for="FishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.ImageBase64))
                {
                    <img src="data:image/jpeg;base64,@Model.ImageBase64" alt="Fish Image" width="100" />
                }
                else
                {
                    <p>No image available</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="FishImage" class="control-label"></label>
                <input type="file" asp-for="FishImage" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FishLocations" class="control-label"></label>
                <select asp-for="FishLocations" asp-items="ViewBag.Locations" class="form-control" multiple></select>
                <span asp-validation-for="FishLocations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RippleColor" class="control-label"></label>
                <input asp-for="RippleColor" class="form-control" />
                <span asp-validation-for="RippleColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

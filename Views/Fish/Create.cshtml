@model DDVTracker.Models.Fish

@{
    ViewData["Title"] = "Fish - Create";
}

<h1>Create</h1>

<h4>Fish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameVersionId" class="control-label"></label>
                <select asp-for="GameVersionId" class ="form-control" asp-items="ViewBag.GameVersionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FishName" class="control-label"></label>
                <input asp-for="FishName" class="form-control" />
                <span asp-validation-for="FishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishImage" class="control-label"></label>
                <input type="file" asp-for="FishImage" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedLocationIds" class="control-label"></label>
                <select asp-for="SelectedLocationIds" asp-items="ViewBag.Locations" class="form-control" multiple></select>
                <span asp-validation-for="SelectedLocationIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RippleColor" class="control-label"></label>
                <select asp-for="RippleColor" class="form-control">
                    <option value="White">White</option>
                    <option value="Blue">Blue</option>
                    <option value="Orange">Orange</option>
                </select>
                <span asp-validation-for="RippleColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

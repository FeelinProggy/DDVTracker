@model DDVTracker.Models.Fish

@{
    Layout = null;
}

<h3>Are you sure you want to delete this fish?</h3>
<div>

    <dl class="row">
        <dd class="col-4">
            <h5>@Html.DisplayFor(model => model.FishName)</h5>
        </dd>
        <dd class="col">
            @if (!string.IsNullOrEmpty(Model.ImageBase64))
            {
                <img src="data:image/jpeg;base64,@Model.ImageBase64" alt="Fish Image" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
    <dl class="row">
        <dt class="col">
            Game Version:
        </dt>
        <dd class="col">
            @Html.DisplayFor(model => model.GameVersion.GameVersionName)
        </dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.FishId" method="post">
        <input type="hidden" asp-for="FishId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </form>
</div>

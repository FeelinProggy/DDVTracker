@model IEnumerable<DDVTracker.Models.Character>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CharacterImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isUnlocked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CharacterLevel)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                    {
                        <img src="data:image/jpeg;base64,@item.ImageBase64" alt="Character Image" width="100" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isUnlocked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CharacterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CharacterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CharacterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
